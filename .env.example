
############################################################
# Example .env file for NestJS Playground
#
# Copy this file to `.env` and adjust values as needed.
#
# This file defines environment variables used to configure
# the application at runtime. Variables can be accessed via
# process.env or configuration libraries.
############################################################

# Application Settings
# APP_PORT: The port on which the application will run.
# Change this if you want to use a different port.
APP_PORT=3001

# Logging Settings
# LOGGING_LEVEL: The logging level for the application.
# Options: fatal, error, warn, log, debug, verbose
LOGGING_LEVEL=debug

# CORS Settings
# CORS_ALLOWED_ORIGIN: Allowed origins for Cross-Origin Resource Sharing
# Use "*" to allow all origins (development only - not recommended for production)
# Use comma-separated list for specific origins: "https://app.com,http://localhost:3000"
# Examples:
#   CORS_ALLOWED_ORIGIN=*
#   CORS_ALLOWED_ORIGIN=https://myapp.com
#   CORS_ALLOWED_ORIGIN=https://app.com,http://localhost:3000,https://staging.app.com
CORS_ALLOWED_ORIGIN=*

# Database Settings
# PostgreSQL database connection configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=nestuser
DB_PASS=nestpassword
DB_DATABASE=nestdb
# DB_SSL: Enable SSL for PostgreSQL connection (true/false) Default: true
DB_SSL=false
# DB_MIGRATIONS_RUN: Automatically run migrations on startup (true/false) Default: true
DB_MIGRATIONS_RUN=true

# Scheduled Task Settings
# SCHEDULE_TASK_CLEANUP_CRON: Cron expression for task cleanup schedule (OPTIONAL)
# Format: second minute hour day month weekday
# Example: "0 * * * * *" runs every minute, "0 0 * * * *" runs every hour
# To disable scheduled task cleanup, comment out or remove this variable
SCHEDULE_TASK_CLEANUP_CRON=*/10 * * * * *