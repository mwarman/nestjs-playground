# Environment configuration for AWS CDK
# Copy this file to .env and update with your specific values

# AWS Account and Region
# Optional: If not set, CDK will use the default AWS CLI configured account and region
CDK_ACCOUNT=123456789012
CDK_REGION=us-east-1

# Environment (dev, qa, stg, prd)
CDK_ENVIRONMENT=dev

# Route 53 Configuration
CDK_HOSTED_ZONE_ID=Z1234567890ABC
CDK_HOSTED_ZONE_NAME=example.com
CDK_DOMAIN_NAME=nestjs-playground-api

# SSL Certificate
CDK_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Application Configuration
CDK_APP_NAME=nestjs-playground
CDK_APP_PORT=3000
CDK_APP_LOGGING_LEVEL=debug
CDK_APP_CORS_ALLOWED_ORIGIN=*

# Database Configuration
CDK_DATABASE_NAME=nestjs_playground
CDK_DATABASE_USERNAME=postgres
CDK_DATABASE_MIN_CAPACITY=0.5
CDK_DATABASE_MAX_CAPACITY=1

# Compute Configuration
CDK_TASK_MEMORY_MB=512
CDK_TASK_CPU_UNITS=256
CDK_SERVICE_DESIRED_COUNT=0
CDK_SERVICE_MIN_CAPACITY=0
CDK_SERVICE_MAX_CAPACITY=4

# Tagging
CDK_TAG_APP=nestjs-playground
CDK_TAG_ENV=dev
CDK_TAG_OU=engineering
CDK_TAG_OWNER=team@example.com